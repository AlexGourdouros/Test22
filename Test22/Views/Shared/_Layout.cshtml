<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Count Your Eggs</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			@{ if (HttpContext.Current.Session["usedID"] == null)

				{
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
						@Html.ActionLink("Count Your Eggs", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
					</div>
					<div class="navbar-collapse collapse">
						<ul class="nav navbar-nav">
							@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "navbar-brand" })
							@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "navbar-brand" })
							@Html.ActionLink("Login", "Index", "Login", new { area = "" }, new { @class = "navbar-brand pull-right" })



						</ul>
					</div>
				}
			}


			@{ if (HttpContext.Current.Session["usedID"] != null)

				{
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
						@Html.ActionLink("Count Your Eggs", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
					</div>
					<div class="navbar-collapse collapse">
						<ul class="nav navbar-nav">
							@Html.ActionLink("Dashboard", "Index", "Dashboard", new { area = "" }, new { @class = "navbar-brand" })
							<li>@Html.ActionLink("Categories", "Index", "categories")</li>
							<li>@Html.ActionLink("Distributers", "Index", "Distributers")</li>
							<li>@Html.ActionLink("Invoices", "Index", "Invoices")</li>
							<li>@Html.ActionLink("InvoiceItems", "Index", "InvoiceItems")</li>
							<li>@Html.ActionLink("Items", "Index", "Items")</li>
							<li>@Html.ActionLink("Payments", "Index", "Payments")</li>
							<li>@Html.ActionLink("Receipts", "Index", "Receipts")</li>
							<li>@Html.ActionLink("Spoilages", "Index", "Spoilages")</li>
							<li>@Html.ActionLink("UsedItems", "Index", "UsedItems")</li>
							@Html.ActionLink("LogOut", "LogOut", "Login", new { area = "" }, new { @class = "navbar-brand pull-right" })
						</ul>
					</div>
				}
			}








		</div>
	</div>



	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Count Your Eggs</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
