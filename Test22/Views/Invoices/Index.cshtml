@model IEnumerable<Test22.Models.Invoice>
@{
	ViewBag.Title = "Index";
	if (HttpContext.Current.Session["usedID"] == null)
	{ Response.Redirect("~/Login/Index"); }
}

<h2>Index</h2>


<p>
	@Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.InvoiceCreated)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.AmountPaid)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.AmountDue)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Total)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.PaymentStatus)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ItemsReceived)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Distributer.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Payment.PaymentType)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.User.UserName)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.InvoiceCreated)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.AmountPaid)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.AmountDue)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Total)
			</td>
			<td>
				@{
					if (item.PaymentStatus == Convert.ToByte(1))
					{<p>Active</p>}
					else if (item.PaymentStatus == 0)
					{<p>In-Active</p>}
				}
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ItemsReceived)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Distributer.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Payment.PaymentType)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.User.UserName)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.InvoiceID }) |
				@Html.ActionLink("Details", "Details", new { id = item.InvoiceID }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.InvoiceID })
			</td>
		</tr>
	}

</table>
